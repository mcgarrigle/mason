#!/usr/bin/env ruby

$LIB_DIR = File.join(File.dirname(__FILE__), "..", "lib")
$LOAD_PATH << $LIB_DIR

require 'sinatra'
require 'mason'

set :port, 9090

# ---------------------------------------------

get '/node/:fqdn' do |fqdn|
  puts fqdn
end

put '/node/:fqdn' do |fqdn|
  puts fqdn
  puts request.body.read
end

# ---------------------------------------------
# end
